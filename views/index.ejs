<div class="max-w-6xl mx-auto space-y-32">
    
    <!-- Hero Section -->
    <section class="min-h-[80vh] flex flex-col md:flex-row items-center justify-between gap-12 pt-20">
        <!-- Text Content -->
        <div class="flex-1 space-y-8">
            <span class="text-lg font-light tracking-wide" style="color: var(--color-text-muted);">Hi there!</span>
            
            <h1 class="text-5xl md:text-7xl font-bold tracking-tighter leading-[1.1]" style="color: var(--color-text);">
                I'm Stephen Wanjiru,<br>
                a <span style="color: var(--color-accent);">Fire Fighter</span> & <br>
                <span style="color: var(--color-accent);">Ai/ML Engineer</span>
            </h1>

            <p class="text-xl max-w-xl font-light leading-relaxed" style="color: var(--color-text-secondary);">
                Bridging the gap between physical safety and digital intelligence.<br> 
                Specializing in Hazmat Ops, AI/ML, and Data Analysis.
            </p>

            <div class="pt-4">
                <a href="/about" class="inline-block rounded-full px-8 py-3 text-sm font-bold tracking-widest uppercase transition-all duration-300 hover:scale-105" style="border: 2px solid var(--color-accent); color: var(--color-text);">
                    More About Me
                </a>
            </div>
        </div>

        <!-- Hero Image -->
        <div class="flex-1 flex justify-center md:justify-end relative w-full">
            <div class="relative w-full max-w-[400px] aspect-[4/5]">
                <!-- Image -->
                <img src="/images/profile.jpg" alt="King Stephen" class="w-full h-full object-cover rounded-2xl transition-all duration-500 z-10 relative shadow-xl hover:scale-105">
                
                <!-- Simple backdrop for contrast -->
                <div class="absolute inset-0 rounded-2xl -rotate-6 -z-10" style="background-color: var(--color-backdrop);"></div>
            </div>
            
            <!-- Radial gradient effect -->
            <div class="absolute -z-10 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-[500px] aspect-square rounded-full blur-[100px]" style="background-color: var(--color-backdrop); opacity: 0.5;"></div>
        </div>
    </section>

    <!-- Scroll Indicator -->
    <div class="flex justify-center py-12">
        <div class="w-6 h-10 rounded-full flex justify-center p-1" style="border: 2px solid var(--color-border);">
            <div class="w-1 h-2 rounded-full animate-bounce" style="background-color: var(--color-accent);"></div> 
        </div>
    </div>

    <!-- Skills Section -->
    <section id="skills" class="space-y-16 pt-24">
        <div class="flex items-baseline justify-between pb-4" style="border-bottom: 1px solid var(--color-border);">
            <h2 class="text-3xl font-bold tracking-widest uppercase" style="color: var(--color-text);">Expertise</h2>
            <span class="text-sm font-mono" style="color: var(--color-text-muted);">01</span>
        </div>

        <!-- iOS-Style Glassmorphism Bento Grid Layout -->
        <div class="grid grid-cols-1 md:grid-cols-12 gap-5 md:gap-7">
            <%
            const expertise = [
                {
                    title: 'Fire Fighting & Hazmat',
                    desc: 'Expertise in emergency response, hazardous materials operations, and public safety leadership.',
                    span: 'md:col-span-7',
                    height: 'min-h-[340px]'
                },
                {
                    title: 'AI/ML Engineering',
                    desc: 'Specializing in computer vision and predictive modeling to solve complex real-world challenges.',
                    span: 'md:col-span-5',
                    height: 'min-h-[340px]'
                },
                {
                    title: 'Data Analysis',
                    desc: 'Extracting actionable insights from complex datasets to drive data-informed decision making.',
                    span: 'md:col-span-5',
                    height: 'min-h-[300px]'
                },
                {
                    title: 'Software Development',
                    desc: 'Building scalable, secure, and modern web applications with Node.js and contemporary frameworks.',
                    span: 'md:col-span-7',
                    height: 'min-h-[300px]'
                }
            ];
            %>
            <% expertise.forEach((item, index) => { %>
                <div class="<%= item.span %> <%= item.height %> group reveal-on-scroll">
                    <!-- iOS Glass Card with Multiple Layers -->
                    <div class="relative h-full rounded-[32px] overflow-hidden transition-all duration-700 ease-out group-hover:scale-[1.02]"
                         style="box-shadow:
                                0 1px 2px rgba(0, 0, 0, 0.1),
                                0 4px 8px rgba(0, 0, 0, 0.08),
                                0 8px 16px rgba(0, 0, 0, 0.06),
                                0 16px 32px rgba(0, 0, 0, 0.04),
                                inset 0 1px 0 rgba(255, 255, 255, 0.15);">

                        <!-- Base Layer: Frosted Glass Background -->
                        <div class="absolute inset-0"
                             style="background: linear-gradient(135deg,
                                    rgba(255, 255, 255, 0.12) 0%,
                                    rgba(255, 255, 255, 0.06) 100%);
                                    backdrop-filter: blur(40px) saturate(180%);
                                    -webkit-backdrop-filter: blur(40px) saturate(180%);">
                        </div>

                        <!-- Border Layer: Subtle White Edge -->
                        <div class="absolute inset-0 rounded-[32px] pointer-events-none"
                             style="border: 0.5px solid rgba(255, 255, 255, 0.18);
                                    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.08);">
                        </div>

                        <!-- Gradient Overlay on Hover -->
                        <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700"
                             style="background: linear-gradient(135deg,
                                    rgba(255, 255, 255, 0.08) 0%,
                                    rgba(255, 255, 255, 0.02) 50%,
                                    rgba(255, 255, 255, 0.08) 100%);">
                        </div>

                        <!-- Accent Glow on Hover -->
                        <div class="absolute -top-20 -right-20 w-80 h-80 opacity-0 group-hover:opacity-20 transition-all duration-1000 blur-3xl"
                             style="background: radial-gradient(circle, var(--color-accent) 0%, transparent 70%);">
                        </div>

                        <!-- Top Shine Line (iPhone signature effect) -->
                        <div class="absolute top-0 left-0 right-0 h-px opacity-60"
                             style="background: linear-gradient(90deg,
                                    transparent 0%,
                                    rgba(255, 255, 255, 0.5) 50%,
                                    transparent 100%);">
                        </div>

                        <!-- Content Container -->
                        <div class="relative h-full p-10 md:p-12 flex flex-col justify-between">
                            <!-- Card Number Badge -->
                            <div class="mb-8">
                                <div class="inline-flex items-center justify-center w-14 h-14 rounded-[18px] transition-all duration-500 group-hover:scale-105 group-hover:rotate-3"
                                     style="background: linear-gradient(135deg,
                                            rgba(255, 255, 255, 0.15) 0%,
                                            rgba(255, 255, 255, 0.08) 100%);
                                            border: 0.5px solid rgba(255, 255, 255, 0.2);
                                            box-shadow:
                                                0 2px 8px rgba(0, 0, 0, 0.1),
                                                inset 0 1px 0 rgba(255, 255, 255, 0.2),
                                                inset 0 -1px 0 rgba(0, 0, 0, 0.05);
                                            backdrop-filter: blur(20px);
                                            -webkit-backdrop-filter: blur(20px);">
                                    <span class="text-base font-mono font-bold tracking-wider"
                                          style="color: var(--color-accent);
                                                 text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);"><%= (index + 1).toString().padStart(2, '0') %></span>
                                </div>
                            </div>

                            <!-- Content -->
                            <div class="space-y-5 flex-1">
                                <h3 class="text-2xl md:text-3xl font-bold tracking-tight leading-tight transition-all duration-500"
                                    style="color: var(--color-text);
                                           text-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);">
                                    <%= item.title %>
                                </h3>
                                <p class="font-light leading-relaxed text-base md:text-lg transition-all duration-500 max-w-lg"
                                   style="color: var(--color-text-secondary);">
                                    <%= item.desc %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>

    <!-- Selected Work Section -->
    <section id="work" class="space-y-16 pt-24">
        <div class="flex items-baseline justify-between pb-4" style="border-bottom: 1px solid var(--color-border);">
            <h2 class="text-3xl font-bold tracking-widest uppercase" style="color: var(--color-text);">Selected Work</h2>
            <span class="text-sm font-mono" style="color: var(--color-text-muted);">02</span>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <% if (typeof images !== 'undefined' && images.length > 0) { %>
                <% images.forEach((image, index) => { %>
                    <div class="group cursor-pointer relative overflow-hidden aspect-[4/5] rounded-sm transition-transform duration-700 ease-out hover:scale-[0.98] reveal-on-scroll image-skeleton shadow-lg" style="background-color: var(--color-bg-card);">
                        <img 
                            src="/images/<%= image %>" 
                            alt="<%= image %>" 
                            loading="lazy" 
                            decoding="async"
                            class="lazy-image w-full h-full object-cover transition-all duration-1000 ease-out transform group-hover:scale-105"
                        >
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-span-full py-12 text-center font-mono text-sm" style="color: var(--color-text-muted);">
                    No images found in gallery.
                </div>
            <% } %>
        </div>
    </section>

    <!-- Contact CTA -->
    <section class="py-24" style="border-top: 1px solid var(--color-border);">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-end gap-8">
            <h2 class="text-5xl md:text-7xl font-bold tracking-tighter max-w-xl leading-none" style="color: var(--color-text);">
                Let's work <br> together.
            </h2>
            <a href="/contact" class="text-xl font-semibold pb-1 transition-opacity hover:opacity-60" style="color: var(--color-text); border-bottom: 2px solid var(--color-accent);">
                Get in touch &rarr;
            </a>
        </div>
    </section>

</div>
